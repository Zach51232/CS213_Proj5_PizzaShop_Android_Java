<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pizzeria.menu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pizzalogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pizzalogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project5_zsg6_ivb8">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Home page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustPizzaActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity"
            android:label="Customization page">
        </activity>
        <activity
            android:name=".CurrentActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity"
            android:label="Current order page">
        </activity>
        <activity
            android:name=".StoreActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity"
            android:label="Store order page">
        </activity>
    </application>
</manifest>